%header.user-container
  .user-header
    %h1.user-header__head
      = link_to root_path,class: "user-header__head__link" do
        = image_tag "fmarket_logo_red.svg", alt: "frima"
    %nav.user-header__nav
      %ol.user-header__nav__ol
        %li.through.user-header__nav__ol__progress
          会員情報
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          電話番号認証
          .user-header__nav__ol__progress__li
        %li.active.user-header__nav__ol__progress
          お届け先住所入力
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          支払い方法
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          完了
          .user-header__nav__ol__progress__li
  .n-box
    .n-box__top
      %p 発送元・お届け先住所入力
    .n3-box__bottom
      .n3-box__bottom__form
        %label{for: ""} お名前
        %span.nd-box__bottom__form__span 必須
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）山田"}/
        %br/
        %input.nd-box__bottom__form__input.second{placeholder: "例）彩"}/
      .n3-box__bottom__form
        %label{for: ""} お名前カナ
        %span.nd-box__bottom__form__span 必須
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）ヤマダ"}/
        %br/
        %input.nd-box__bottom__form__input.second{placeholder: "例）アヤ"}/
      .n3-box__bottom__form
        %label{for: ""} 郵便番号
        %span.nd-box__bottom__form__span 必須
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）123-4567"}/
      .n3-box__bottom__form
        %label{for: ""} 都道府県
        %span.nd-box__bottom__form__span 必須
        %br/
        %select
          %option{value: "01"} 北海道
          %option{value: "02"} 青森県
          %option{value: "03"} 秋田県
          %option{value: "04"} 岩手県
          %option{value: "05"} 山形県
          %option{value: "06"} 宮城県
          %option{value: "07"} 福島県
      .n3-box__bottom__form
        %label{for: ""} 市区町村
        %span.nd-box__bottom__form__span 必須
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）横浜市緑区"}/
      .n3-box__bottom__form
        %label{for: ""} 番地
        %span.nd-box__bottom__form__span 必須
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）青山1-1-1"}/
      .n3-box__bottom__form
        %label{for: ""} 建物名
        %span.n3-box__bottom__form__any 任意
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）柳ビル103"}/
      .n3-box__bottom__form
        %label{for: ""} 電話
        %span.n3-box__bottom__form__any 任意
        %br/
        %input.nd-box__bottom__form__input{placeholder: "例）09012345678"}/
      %button.nd-box__bottom__form__link
        = link_to step4_signup_index_path do
          .nd-box__bottom__form__link__text 次へ進む
  = render "user_footer"