.content
  .content__box
    .content__box__top
      .content__box__top__left
        %a.content__box__top__left__mercari{href: products_path}
          %img.content__box__top__left__mercari__img{:alt => "fmarket", :src => "/assets/fmarket_logo_white.svg"}/
      .content__box__top__right
        %form.content__box__top__right__summary{:action => "/jp/search/"}
          %input.content__box__top__right__summary__text{:name => "keyword", :placeholder => "何をお探しですか？", :type => "search", :value => ""}/
          %button.content__box__top__right__summary__btn{:type => "submit"}
            %i.fas.fa-search
    .content__box__bottom
      .content__box__bottom__left
        .content__box__bottom__left__wrap
          #category-top
            = link_to products_path, id: "category-top__left-box" do
              %i.fas.fa-list-ul
              %span#category-top__left-box__text 
                カテゴリーから探す
            %div#category-top__left-box__pop-up
              %ul#ex_menu
                %li
                  = link_to products_path,class: "google" do
                    Google
                %li
                  = link_to products_path,class: "yahoo" do
                    Yahoo!Japan
          #brand-top
            = link_to products_path, id: "brand-top__left-box" do
              %svg#brand-top__left-box__img{"aria-hidden" => "true", :height => "15", :viewbox => "0 0 16 15", :width => "16"}
                %path{:d => "M6.315 0L4.473 1.806 2.83.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z", :fill => "currentColor", "fill-rule" => "nonzero"}
              %span#brand-top__left-box__text
                ブランドから探す
              %div#brand-top__left-box__pop-up
                %ul#ex_menu2
                %li
                  = link_to products_path,class: "google" do
                    Google
                %li
                  = link_to products_path,class: "yahoo" do
                    Yahoo!Japan
      .content__box__bottom__right
        - if user_signed_in?
          #content__box__bottom__right__like
            = link_to user_mypages_path(current_user.id), id: "content__box__bottom__right__like__box" do
              %svg#content__box__bottom__right__like__box__img{"aria-hidden" => "true", :height => "15", :viewbox => "0 0 16 15", :width => "16"}
                %path{:d => "M8.08 12.711l-.08.082-.08-.082C4.112 9.188 1.6 6.858 1.6 4.496c0-1.635 1.2-2.861 2.8-2.861 1.232 0 2.432.81 2.856 1.929h1.496c.416-1.12 1.616-1.93 2.848-1.93 1.6 0 2.8 1.227 2.8 2.862 0 2.362-2.512 4.692-6.32 8.215M11.6 0C10.208 0 8.872.662 8 1.708 7.128.662 5.792 0 4.4 0 1.936 0 0 1.978 0 4.496c0 3.09 2.72 5.608 6.84 9.433L8 15l1.16-1.079C13.28 10.104 16 7.586 16 4.496 16 1.978 14.064 0 11.6 0", :fill => "currentColor", "fill-rule" => "evenodd"}
              %span#content__box__bottom__right__like__box__text
                いいね！一覧
              %div#content__box__bottom__right__like__box__pop-up
                %ul#ex_menu3
                  %li
                    = link_to products_path,class: "google" do
                      Google
                  %li
                    = link_to products_path,class: "yahoo" do
                      Yahoo!Japan
          #content__box__bottom__right__notice
            = link_to user_mypages_path(current_user.id), id: "content__box__bottom__right__notice__box" do
              %svg#content__box__bottom__right__notice__box__img{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 14 16", :width => "14"}
                %path{:d => "M6.592 16c.89 0 1.632-.734 1.632-1.632H4.928c0 .898.742 1.632 1.664 1.632zm4.896-4.928V6.976c-.008-2.521-1.345-4.63-3.712-5.184v-.576C7.79.55 7.241 0 6.56 0c-.68 0-1.23.55-1.216 1.216v.576c-2.36.554-3.704 2.654-3.712 5.184v4.096L0 12.704v.832h13.12v-.832l-1.632-1.632zm-1.632.832h-6.56V6.976c0-2.024 1.238-3.68 3.296-3.68 2.026 0 3.264 1.656 3.264 3.68v4.928z", :fill => "currentColor", "fill-rule" => "nonzero"}
              %span#content__box__bottom__right__notice__box__text
                お知らせ
              %div#content__box__bottom__right__notice__box__pop-up
                %ul#ex_menu4
                  %li
                    = link_to products_path,class: "google" do
                      Google
                  %li
                    = link_to products_path,class: "yahoo" do
                      Yahoo!Japan
          #content__box__bottom__right__todo
            = link_to user_mypages_path(current_user.id), id: "content__box__bottom__right__todo__box" do
              %svg#content__box__bottom__right__todo__box__img{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 21 16", :width => "21"}
                %path{:d => "M6.682 12.657L1.67 7.642 0 9.313 6.682 16 21 1.672 19.33 0z", :fill => "currentColor", "fill-rule" => "nonzero"}
              %span#content__box__bottom__right__todo__box__text
                やることリスト
              %div#content__box__bottom__right__todo__box__pop-up
                %ul#ex_menu5
                  %li
                    = link_to products_path,class: "google" do
                      Google
                  %li
                    = link_to products_path,class: "yahoo" do
                      Yahoo!Japan
          #content__box__bottom__right__my-page
            = link_to user_mypages_path(current_user.id), id: "content__box__bottom__right__my-page__box" do
              %img#content__box__bottom__right__my-page__box__img{:alt => "", :src => "https://static.mercdn.net/images/member_photo_noimage_thumb.png"}/
              %span#content__box__bottom__right__my-page__box__text
                マイページ
              %div#content__box__bottom__right__my-page__box__pop-up
                %ul#ex_menu6
                  %li
                    = link_to products_path,class: "google" do
                      Google
                  %li
                    = link_to products_path,class: "yahoo" do
                      Yahoo!Japan
        - else
          .content__box__bottom__right
            .content__box__bottom__right__registration
              = link_to signup_index_path  do
                = submit_tag "新規会員登録", class: "content__box__bottom__right__registration__box"
            .content__box__bottom__right__login
              = link_to user_session_path do
                = submit_tag "ログイン", class: "content__box__bottom__right__login__box"