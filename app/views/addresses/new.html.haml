%header.user-container
  .user-header
    %h1.user-header__head
      = link_to root_path,class: "user-header__head__link" do
        = image_tag "/assets/fmarket_logo_red.svg", alt: "frima"
    %nav.user-header__nav
      %ol.user-header__nav__ol
        %li.through.user-header__nav__ol__progress
          会員情報
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          電話番号認証
          .user-header__nav__ol__progress__li
        %li.active.user-header__nav__ol__progress
          お届け先住所入力
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          支払い方法
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          完了
          .user-header__nav__ol__progress__li
  .n-box
    .n-box__top
      %p 発送元・お届け先住所入力
    = form_for @address, url:addresses_path,method: :post, html: {class: ''} do |f|
      .n3-box__bottom
        .n3-box__bottom__form
          = f.label :last_name, "お名前"
          %span.nd-box__bottom__form__span="必須"
          = f.text_field :last_name, placeholder: '例）山田',class:"nd-box__bottom__form__input"
          = f.text_field :first_name, placeholder: '例）彩',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          = f.label :last_name, "お名前カナ"
          %span.nd-box__bottom__form__span="必須"
          = f.text_field :last_name_kana, placeholder: '例）ヤマダ',class:"nd-box__bottom__form__input"
          = f.text_field :first_name_kana, placeholder: '例）アヤ',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          = f.label :last_name, "郵便番号"
          %span.nd-box__bottom__form__span="必須"
          = f.text_field :postal_cord, placeholder: '例）123-4567',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          = f.label :last_name, "都道府県"
          %span.nd-box__bottom__form__span="必須"
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name
        .n3-box__bottom__form
          = f.label :last_name, "市区町村"
          %span.nd-box__bottom__form__span="必須"
          = f.text_field :city, placeholder: '例）横浜市緑区',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          = f.label :last_name, "番地"
          %span.nd-box__bottom__form__span="必須"
          = f.text_field :street_num, placeholder: '例）横浜市緑区',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          = f.label :last_name, "建物名"
          %span.n3-box__bottom__form__any="任意"
          = f.text_field :building, placeholder: '例）青山1-1-1',class:"nd-box__bottom__form__input"
        .n3-box__bottom__form
          =f.label :last_name, "電話"
          %span.n3-box__bottom__form__any="任意"
          = f.text_field :phone_num, placeholder: '例）09012345678',class:"nd-box__bottom__form__input"
        = f.submit "次へ進む" ,class: "group__submit"
  = render "/signup/user_footer"
