%header.user-container
  .user-header
    %h1.user-header__head
      = link_to root_path,class: "user-header__head__link" do
        = image_tag "/assets/fmarket_logo_red.svg", alt: "frima"
    %nav.user-header__nav
      %ol.user-header__nav__ol
        %li.through.user-header__nav__ol__progress
          会員情報
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          電話番号認証
          .user-header__nav__ol__progress__li
        %li.through.user-header__nav__ol__progress
          お届け先住所入力
          .user-header__nav__ol__progress__li
        %li.active.user-header__nav__ol__progress
          支払い方法
          .user-header__nav__ol__progress__li
        %li.user-header__nav__ol__progress
          完了
          .user-header__nav__ol__progress__li
  .t-box
    .t-box__title
      .t-box__title__text
        支払い方法
    .t-box__credit
      .t-box__credit__inner
        = form_with url: cards_path, method: :post, html: { name: "inputForm" } do |f|
          .t-box__credit__inner__box
            = f.label :カード番号, class: 't-label'
            %span.t-required
              必須
          .t-box__credit__inner__input
            = f.text_field :card_number, type: 'text', class: 't-box__credit__inner__input__number', placeholder: '半角数字のみ', maxlength: "16"
          %ul.signup-card-list
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1398199435'
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1398199435'
          .t-box__credit__inner__box
            = f.label :有効期限, class: 't-label'
            %span.t-required
              必須
            .t-box__credit__inner__box__manth
              .t-box__credit__inner__box__manth__wrap
                = f.collection_select :exp_month, Month.all, :id, :name, id: 'exp_month'
                %span.expire-text
                  月
              .t-box__credit__inner__box__manth__wrap
                = f.collection_select :exp_year, Years.all, :id, :name, id: 'exp_year'
                %span.expire-text
                  年
          .t-box__credit__inner__box
            = f.label :セキュリティコード, class: 't-label'
            %span.t-required
              必須
          .t-box__credit__inner__box__security
            = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
          .t-box__bottom#card_token
            = f.submit '追加する', class: 't-box__bottom__add-btn', id: 'token_submit'
= render "./signup/user_footer"